.Checkout
  grid-template-columns 3fr 1fr
  grid-gap 2rem
  grid-row-ga 1.5em
  display grid
  &-item
    display flex
    justify-content space-between
    align-items center
    .fas
      margin 0 0 0 10px
      color  rgba(0,0,0,.4)
  &-element
    display flex
    justify-content space-between
    align-items center
    width 100%
    border-bottom 1px solid #eee
    h4
      margin 0

.btn
  width 10%
  padding 5px
  border-radius 0px 0px 5px 5px
  border 0px
  outline 0
  cursor pointer
  font-size 14px
  font-weight 300
  &:hover
    background-color rgba(39,44,49,.06)
