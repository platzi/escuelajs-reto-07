.Checkout
  grid-template-columns 3fr 1fr
  grid-gap 2rem
  grid-row-ga 1.5em
  display grid
  &-item
    display flex
    justify-content space-between
    align-items center
    .fas
      margin 0 0 0 10px
      color  rgba(0,0,0,.4)
      cursor pointer
    h4
      white-space nowrap
      margin 8px 0
  &-titles
    display flex
    justify-content space-between
    align-items center
    width 100%
    border-bottom 1px solid #000
    h4
      margin 0
  &-price
    width 100%
    display grid
    align-items center
    grid-column-gap 0px
    border-bottom 1px solid #eee
    grid-template-columns 1fr repeat(3,min-content)
    &-value
      justify-self end
      margin-right 20px
    &-quantity
      margin-left 10px
  &-element
    display flex
    justify-content flex-end
    align-items center
    width 100%
    border-bottom 1px solid #eee
    h4
      margin 0
    &-quantity
      margin-left 10px